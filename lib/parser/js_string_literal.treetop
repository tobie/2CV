grammar JSStringLiteral
  include JSLineTerminator
  rule StringLiteral
    ('"' DoubleStringCharacter* '"') / ("'" SingleStringCharacter* "'")
  end

  rule DoubleStringCharacter
    !(["\\] / LineTerminator) . / [\\] EscapeSequence
  end
   
  rule SingleStringCharacter
    !(['\\] / LineTerminator) . / [\\] EscapeSequence
  end
  
  rule EscapeSequence
    CharacterEscapeSequence
    # TODO support for
    # 0 [lookahead âˆ‰ DecimalDigit] 
    # HexEscapeSequence 
    # UnicodeEscapeSequence
  end
  
  rule CharacterEscapeSequence
    SingleEscapeCharacter / NonEscapeCharacter
  end
  
  rule SingleEscapeCharacter
    ['"\\bfnrtv]
  end
  
  rule NonEscapeCharacter
    !([\\] / LineTerminator)
  end
end